            if (a != null) {
                for (let i = 0; i < a.length; i++) {
                    num += a[i] + '|' + b[i] + '|' + c[i] + '&';
                }
                num = num.substring(0, num.length - 1);
            }
            var data = {
                "ses": num
            };
            $.ajax({
                url: "/Cart/updateCart",
                type: "POST",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response.isEmpty == 0) {
