<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link rel="shortcut icon" href="~/Areas/Admin/Public/assets/images/favicon.ico">
    <script src="~/Areas/Admin/Public/assets/libs/jquery/jquery.min.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/Areas/Admin/Public/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Areas/Admin/Public/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Areas/Admin/Public/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Public/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Public/assets/libs/dropify/css/dropify.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Public/assets/libs/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Public/assets/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Public/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Public/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/assets/css/app.min.css" rel="stylesheet" />
    @RenderSection("head", required: false)
</head>
<body data-topbar="dark">
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">
                        <a href="@Url.Action("Index", "Dashboard")" class="logo logo-light">
                            <span class="logo-sm">
                                <img src="~/Areas/Admin/Public/assets/images/logo.png" alt="" height="65">
                            </span>
                            <span class="logo-lg">
                                <img src="~/Areas/Admin/Public/assets/images/logo_sticky.png" alt="" height="45">
                            </span>
                        </a>
                    </div>

                    <button type="button" class="btn btn-sm px-3 font-size-24 header-item waves-effect" id="vertical-menu-btn">
                        <i class="mdi mdi-menu"></i>
                    </button>

                </div>

                <!-- Search input -->
                <div class="search-wrap" id="search-wrap">
                    <div class="search-bar">
                        <input class="search-input form-control" placeholder="Tìm kiếm" />
                        <a href="#" class="close-search toggle-search" data-target="#search-wrap">
                            <i class="mdi mdi-close-circle"></i>
                        </a>
                    </div>
                </div>

                <div class="d-flex">

                    <div class="dropdown d-none d-lg-inline-block">
                        <button type="button" class="btn header-item toggle-search noti-icon waves-effect" data-target="#search-wrap">
                            <i class="mdi mdi-magnify"></i>
                        </button>
                    </div>

                    <div class="dropdown d-inline-block d-lg-none ml-2">
                        <button type="button" class="btn header-item noti-icon waves-effect" id="page-header-search-dropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="mdi mdi-magnify"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right p-0"
                             aria-labelledby="page-header-search-dropdown">
                            <form class="p-3">
                                <div class="form-group m-0">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Tìm kiếm ..." aria-label="Recipient's username">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit"><i class="mdi mdi-magnify"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="dropdown d-none d-lg-inline-block ml-1">
                        <button type="button" class="btn header-item noti-icon waves-effect" data-toggle="fullscreen">
                            <i class="mdi mdi-fullscreen"></i>
                        </button>
                    </div>

                    <div class="dropdown d-inline-block">
                        <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @if (Session["avatar"] != null)
                            {
                                var avatarPath = "~/Areas/Admin/wwwroot/avatar/" + @Session["avatar"];
                                <img class="rounded-circle header-profile-user" src="@Url.Content(avatarPath)" alt="Header Avatar">
                            }
                            else
                            {
                                <img class="rounded-circle header-profile-user" src="~/Areas/Admin/wwwroot/avatar/user.png" alt="Header Avatar">
                            }

                            <span class="d-none d-xl-inline-block ml-1">
                                @if (Session["username"] != null)
                                {
                                    @Session["username"]
                                }
                            </span>
                            <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <!-- item-->
                            <a class="dropdown-item" href="@Url.Action("Edit", "User", new { id = @Session["idUser"]})"><i class="dripicons-user d-inlne-block text-muted mr-2"></i> Thông tin tài khoản</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Login")"><i class="dripicons-exit d-inlne-block text-muted mr-2"></i> Đăng xuất</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>
    <div class="vertical-menu">
        <div data-simplebar class="h-100">
            <!--- Sidemenu -->
            <div id="sidebar-menu">
                <ul class="metismenu list-unstyled" id="side-menu">
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Category")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Danh mục</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Package")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Tour</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Customer")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Khách hàng</span>
                        </a>
                    </li>
                    @if (Session["roleId"].Equals(1))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Role")" class="waves-effect">
                                <i class="mdi mdi-speedometer"></i>
                                <span>Vai trò</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "User")" class="waves-effect">
                                <i class="mdi mdi-speedometer"></i>
                                <span>Tài khoản</span>
                            </a>
                        </li>
                    }
                    <li>
                        <a href="@Url.Action("Index", "News")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Tin tức</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Slider")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Slide trang chủ</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Booking")" class="waves-effect">
                            <i class="mdi mdi-speedometer"></i>
                            <span>Đặt hàng</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                @RenderBody()
            </div> <!-- container-fluid -->
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        2021 -
                        <script>document.write(new Date().getFullYear())</script> © Okayu.
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-right d-none d-sm-block">
                            Uaena in <i class="mdi mdi-heart text-danger"></i> Viet Nam
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- JAVASCRIPT -->
    <script src="~/Areas/Admin/Public/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Areas/Admin/Public/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Admin/Public/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Areas/Admin/Public/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Areas/Admin/Public/assets/libs/node-waves/waves.min.js"></script>

    <!-- google maps api -->
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyCtSAR45TFgZjOs4nBFFZnII-6mMHLfSYI"></script>

    <!-- Gmaps file -->
    <script src="~/Areas/Admin/Public/assets/libs/gmaps/gmaps.min.js"></script>

    <script src="~/Areas/Admin/Public/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

    <script src="~/Areas/Admin/Public/assets/libs/select2/js/select2.min.js"></script>
    <!--tinymce js-->
    <script src="~/Areas/Admin/Public/assets/libs/tinymce/tinymce.min.js"></script>

    <!-- Gmaps file -->
    <script src="~/Areas/Admin/Public/assets/libs/gmaps/gmaps.min.js"></script>
    <script src="~/Areas/Admin/assets/libs/dropzone/min/dropzone.min.js"></script>
    <script src="~/Areas/Admin/Public/assets/libs/dropify/js/dropify.min.js"></script>

    <!-- Magnific Popup-->
    <script src="~/Areas/Admin/Public/assets/libs/magnific-popup/jquery.magnific-popup.min.js"></script>

    <!-- Chart JS -->
    <script src="~/Areas/Admin/Public/assets/libs/chart.js/Chart.bundle.min.js"></script>

    <script src="~/Areas/Admin/Public/assets/js/pages/profile.init.js"></script>

    <!-- init js -->
    <script src="~/Areas/Admin/Public/assets/js/pages/form-editor.init.js"></script>
    <script src="~/Areas/Admin/Public/assets/js/pages/form-advanced.init.js"></script>
    <script src="~/Areas/Admin/Public/assets/js/pages/form-fileuploads.init.js"></script>
    <script src="~/Areas/Admin/Public/assets/js/app.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
