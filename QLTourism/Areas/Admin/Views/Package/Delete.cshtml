        </dt>

        <dd>
            @Html.DisplayFor(model => model.pkgTimePeriod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pkgStartPlace)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pkgStartPlace)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pkgEndPlace)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pkgEndPlace)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pkgDesc)
